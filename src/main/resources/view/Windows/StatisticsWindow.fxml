<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="620.0" minWidth="600.0" styleClass="main-content-window" stylesheets="@../defaultStyles.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="windowTitle" styleClass="window-title" text="My Statistics" />
      <Label fx:id="totalSessions" text="Total sessions:" />
      <Label fx:id="totalDuration" text="Total duration:" />
      <Label styleClass="window-subtitle" text="My Sessions" />
      <ScrollPane fx:id="sessionsScrollPane" fitToHeight="true" fitToWidth="true" maxHeight="200.0" minHeight="200.0" prefHeight="200.0">
         <content>
            <TableView fx:id="sessionsTableView" fixedCellSize="24.0" />
         </content></ScrollPane>
      <Label styleClass="window-subtitle" text="My Statistics by Deck" />
      <ScrollPane fx:id="deckStatsScrollPane" fitToHeight="true" fitToWidth="true" maxHeight="200.0" minHeight="200.0" prefHeight="200.0">
         <content>
            <TableView fx:id="deckStatsTableView" fixedCellSize="24.0" />
         </content>
      </ScrollPane>
<!--      <Label fx:id="sessionsThisWeek" text="Sessions this week:" />-->
   </children>
</fx:root>
